<nav>
      <ul>
        <li>
          <a href="/users">Users</a>
        </li>
        <li>
          <a href="/photos">Photos</a>
        </li>
      </ul>
    </nav>
    
<h1><%= @the_user.username %></h1>

<dl>
  <dt>
    ID
  </dt>
  <dd>
    <%= @the_user.id %>
  </dd>

  <dt>
    Edit user
  </dt>
  <dd>
    <form action="/modify_user/<%= @the_user.username %>" method="post">
      <label for="browser_username">Username</label>
      <input id="browser_username" type="text" name="input_username" value="<%= @the_user.username %>">

      <button>Update user</button>
    </form>
  </dd>
</dl>

<h2>Own photos <%= @the_user.own_photos.count %></h2>

<table border="1">
  <tr>
    <th>
      Image
    </th>

    <th>
      Owner
    </th>

    <th>
      Caption
    </th>

    <th>
      Posted
    </th>

    <th>
    </th>
  </tr>
  <% @the_user.own_photos.each do |photo| %>
      <dl>
      <dt>Image</dt>
      <dd><img src="<%= photo.image%>" height="300px" /></dd>
      <dt>Caption</dt>
      <dd><p><%= photo.caption %></p></dd>
      <dt>Owner</dt>
      <dd><%= @the_user.username %></dd>
      <dt>Posted</dt>
      <dd><%= photo.created_at %></dd>
    </dl>
  <% end %>
<hr>

</table>
