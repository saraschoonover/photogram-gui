    <h1>Photo Details</h1>

<dl>
  <dt>Image</dt>
  <dd><img src="<%= @the_photo.image %>" height="300px" /></dd>
  <dt>Caption</dt>
  <dd><p><%= @the_photo.caption %></p></dd>
  <dt>Owner</dt>
  <dd><%= @the_photo.poster.username %></dd>
  <dt>Posted</dt>
  <dd><%= @the_photo.created_at %></dd>
</dl>
<hr>

<dt>Edit photo</dt>
<dd>
  <form action="/modify_photo/<%= @the_photo.id %>" method="post">
    <label for="browser_image">Image</label>
    <input id="browser_image" type="text" name="input_image" placeholder="Enter a URL for theimage..." value="<%= @the_photo.image %>">
    <label for="browser_caption">Caption</label>
    <textarea id="browser_caption" name="input_caption" placeholder="Enter a caption for thephoto..."><%= @the_photo.caption %></textarea>
    <button>Update photo</button>
    </form>
</dd>

<dt> Delete photo</dt>
<dd><a href="/delete_photo/<%= @the_photo.id %>">Delete this photo</a></dd>

<br>

